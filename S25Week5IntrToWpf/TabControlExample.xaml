<Window x:Class="S25Week5IntrToWpf.TabControlExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S25Week5IntrToWpf"
        mc:Ignorable="d"
        Title="TabControlExample" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Personal Info">
                <Canvas>
                    <Label Content="Label" Canvas.Left="90" Canvas.Top="67"/>
                    <TextBox Canvas.Left="167" TextWrapping="Wrap" Text="TextBox" Canvas.Top="80" Width="120"/>
                    <Label Content="Label" Canvas.Left="112" Canvas.Top="192"/>
                    <TextBox Canvas.Left="227" TextWrapping="Wrap" Text="TextBox" Canvas.Top="203" Width="120"/>
                </Canvas>
            </TabItem>

            <TabItem Header="Hobbies">
                <StackPanel>
                    <CheckBox Content="CheckBox"/>
                    <CheckBox Content="CheckBox"/>
                    <CheckBox Content="CheckBox"/>
                    <CheckBox Content="CheckBox"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
